@model NewEventVM
@using eTickets.Data;

@{
    ViewData["Title"] = "Create a New Event";
}




<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4 style="margin-left:150px">Create a New Event</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            @*<div class="form-group">
                                <label asp-for="Max_Size" class="control-label"></label>
                                <input asp-for="Max_Size" type="number" class="form-control" />
                                <span asp-validation-for="Max_Size" class="text-danger"></span>
                            </div>*@

                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Time" class="control-label"></label>
                                <input asp-for="Time" type="time" class="form-control" />
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LocationId" class="control-label"></label>
                                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.Locations"></select>
                                <span asp-validation-for="LocationId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EventCategory" class="control-label"></label>
                                <select asp-for="EventCategory" class="form-control" asp-items="Html.GetEnumSelectList<EventCategory>()"></select>
                                <span asp-validation-for="EventCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CoordinatorId" class="control-label"></label>
                                <select asp-for="CoordinatorId" class="form-control" asp-items="ViewBag.Coordinators"></select>
                                <span asp-validation-for="CoordinatorId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SpeakerIds" class="control-label"></label>
                                <select asp-for="SpeakerIds" class="form-control" asp-items="ViewBag.Speakers" multiple></select>
                                <span asp-validation-for="SpeakerIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="50%" height="50%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}